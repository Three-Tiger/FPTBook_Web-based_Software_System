@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section stylesheets {
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/login.css">
}

<section class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/img/bg_login.jpg')"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3 class="mb-5">Login to <strong>FPTBook</strong></h3>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group first">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group last my-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex mb-5 align-items-center">
                            <label asp-for="Input.RememberMe" class="control control--checkbox mb-0">
                                <span class="caption">Remember me</span>
                                <input type="checkbox" asp-for="Input.RememberMe" />
                                <div class="control__indicator"></div>
                            </label>
                            <span class="ms-auto"><a id="forgot-password" asp-page="./ForgotPassword" class="forgot-pass">Forgot Password</a></span>
                        </div>

                        <input type="submit" value="Log in" id="login-submit" class="btn btn-block btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
