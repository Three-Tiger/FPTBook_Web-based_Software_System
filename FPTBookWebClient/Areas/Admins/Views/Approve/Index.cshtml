@model IEnumerable<BusinessObjects.Genre>
@{
	ViewData["Title"] = "Approvel Genre ";
}
<div class="pt-2 mb-2">
	<h1 class="text-center">Approvel Genre List</h1>

	<table id="example" class="table table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					<strong>ID</strong>
				</th>
				<th>
					<strong>Name</strong>
				</th>
				<th>
					<strong>Description</strong>
				</th>
				<th>
					<strong>Function</strong>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{

				<tr id="genre_@item.GenreId">
					<td>@item.GenreId</td>
					<td>@item.GenreName</td>
					<td>@item.GenreDescription</td>
					<td>
						<a class="btn btn-primary approvel" id="approvel_@item.GenreId" data-id="@item.GenreId">Approve</a>
						<a class="btn btn-danger reject" id="reject_@item.GenreId" data-id="@item.GenreId">Reject</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
<script>
	$('.approvel').click(function (e) {
		e.preventDefault();
		var id = $(this).attr("data-id");
		var el = this
		var api = "@ViewBag.api";
		const swalWithBootstrapButtons = Swal.mixin({
			customClass: {
				confirmButton: 'btn btn-success',
				cancelButton: 'btn btn-danger me-2'
			},
			buttonsStyling: false
		})

		swalWithBootstrapButtons.fire({
			title: 'Are you sure to approve it?',
			text: "You won't be able to revert this!",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Yes, approve it!',
			cancelButtonText: 'No, cancel!',
			reverseButtons: true
		}).then((result) => {
			if (result.isConfirmed) {
				$.ajax({
					url: api + "/api/Genres/Approvel/" + id,
					type: "put",
					data: {
						id: id,
					},
					success: function (result, status, xhr) {
						Swal.fire(
							'Approved',
							'Accepted book genre',
							'success'
						)
						$(el).closest('tr').css('background', '#a5dc86')
						$(el)
							.closest('tr')
							.fadeOut(800, function () {
								$('#genre_' + id).remove()
							})
					},
					error: function (xhr, status, error) {
						console.log(xhr);
					}
				});
			} else if (
				/* Read more about handling dismissals below */
				result.dismiss === Swal.DismissReason.cancel
			) {
				swalWithBootstrapButtons.fire(
					'Cancelled',
					'You have unconfirmed the genre.',
					'error'
				)
			}
		})
	});

	$('.reject').click(function (e) {
		e.preventDefault();
		var id = $(this).attr("data-id");
		var el = this
		var api = "@ViewBag.api";
		const swalWithBootstrapButtons = Swal.mixin({
			customClass: {
				confirmButton: 'btn btn-success',
				cancelButton: 'btn btn-danger me-2'
			},
			buttonsStyling: false
		})

		swalWithBootstrapButtons.fire({
			title: 'Are you sure to reject it?',
			text: "You won't be able to revert this!",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Yes, reject it!',
			cancelButtonText: 'No, cancel!',
			reverseButtons: true
		}).then((result) => {
			if (result.isConfirmed) {
				$.ajax({
					url: api + "/api/Genres/Reject/" + id,
					type: "put",
					data: {
						id: id,
					},
					success: function (result, status, xhr) {
						Swal.fire(
							'Rejected',
							'Rejected book genre',
							'error'
						)
						$(el).closest('tr').css('background', '#f27474')
						$(el)
							.closest('tr')
							.fadeOut(800, function () {
								$('#genre_' + id).remove()
							})
					},
					error: function (xhr, status, error) {
						console.log(xhr);
					}
				});
			} else if (
				/* Read more about handling dismissals below */
				result.dismiss === Swal.DismissReason.cancel
			) {
				swalWithBootstrapButtons.fire(
					'Cancelled',
					'You have unconfirmed the genre.',
					'error'
				)
			}
		})
	});
</script>