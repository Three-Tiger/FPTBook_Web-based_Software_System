@model IEnumerable<BusinessObjects.Genre>
@{
	ViewData["Title"] = "Approvel Genre ";
}
<div class="pt-2 mb-2">
	<h1 class="text-center">Approvel Genre List</h1>

	<table id="example" class="table table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					<strong>ID</strong>
				</th>
				<th>
					<strong>Name</strong>
				</th>
				<th>
					<strong>Description</strong>
				</th>
				<th>
					<strong>Function</strong>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{

				<tr>
					<td>@item.GenreId</td>
					<td>@item.GenreName</td>
					<td>@item.GenreDescription</td>
					<td>
						<a class="btn btn-primary" asp-area="Admins" asp-controller="Approve" asp-action="AppGenre" asp-route-id="@item.GenreId">Approve</a>
						<a class="btn btn-danger" asp-area="Admins" asp-controller="Approve" asp-action="Reject" asp-route-id="@item.GenreId">Reject</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>