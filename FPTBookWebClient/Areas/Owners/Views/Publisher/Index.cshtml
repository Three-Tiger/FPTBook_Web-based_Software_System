@model IEnumerable<BusinessObjects.Publisher>
@{
	ViewData["Title"] = "Publishers List";
}
<div class="pt-2 mb-2">
	<h1 class="text-center">Publishers List</h1>
	<div class="text-center mb-2 row">
		<div class="col-12 d-flex justify-content-center align-items-center">
			<a asp-area="Owners" asp-controller="Publisher" asp-action="Create" class="btn btn-outline-info">
				<i class="bi bi-plus-circle"></i>
				Add
			</a>
		</div>
	</div>
	<table id="example" class="table table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					<strong>ID</strong>
				</th>
				<th>
					<strong>Publisher Name</strong>
				</th>
				<th>
					<strong>Publisher Phone</strong>
				</th>
				<th>
					<strong>Publisher Mail</strong>
				</th>
				<th>
					<strong>Publisher Address</strong>
				</th>
				<th>
					<strong>Edit</strong>
				</th>
				<th>
					<strong>Delete</strong>
				</th>
			</tr>
		</thead>
		@foreach (var item in Model)
		{
			<tbody>
				<tr>
					<td>@item.PublisherId</td>
					<td>@item.PublisherName</td>
					<td>@item.PublisherPhone</td>
					<td>@item.PublisherMail</td>
					<td>@item.PublisherAddress</td>
					<td>
                        <a asp-area="Owners" asp-controller="Publisher" asp-action="Update" asp-route-id="@item.PublisherId"><i class="bi bi-pen-fill" style="color: black;"></i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.PublisherId" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash-fill" style="color: red;"></i></a>
                    </td>
				</tr>
			</tbody>
		}
	</table>
</div>