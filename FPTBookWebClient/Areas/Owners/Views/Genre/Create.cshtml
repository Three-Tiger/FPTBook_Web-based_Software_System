@model BusinessObjects.Genre
@{
	ViewData["Title"] = "Adding Genre";
}

<h1 class="text-center pb-4">Adding Genre</h1>
<form asp-area="Owners" asp-controller="Genre" asp-action="Create" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label class="form-label font-weight-bold">Genre Name</label>
		<input asp-for="GenreName" class="form-control" required />
		<span asp-validation-for="GenreName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="form-label font-weight-bold">Genre Name</label>
		<input asp-for="GenreDescription" class="form-control" required />
		<span asp-validation-for="GenreDescription" class="text-danger"></span>
	</div>
	<div class="form-group text-center">
		<input type="submit" class="btn btn-info" asp-area="Owners" asp-controller="Genre" asp-action="Create" value="Add new" />
		<a class="btn btn-info" asp-action="Index">Cancel</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}