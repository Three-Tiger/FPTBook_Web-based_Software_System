@model IEnumerable<BusinessObjects.Book>
@{
	ViewData["Title"] = "Books List";
}
<div class="pt-2 mb-2">
	<h1 class="text-center">Books List</h1>
	<div class="text-center mb-2 row">
		<div class="col-6 d-flex justify-content-start align-items-center">
			<a asp-area="Owners" asp-controller="Book" asp-action="Create" class="btn btn-outline-info">
				<i class="bi bi-plus-circle"></i>
				Add
			</a>
		</div>
		<div class="col-6 d-flex justify-content-end align-items-center">
			<form action="/manage/category" method="GET" class="d-flex input-group w-auto">
				<input name="search" type="search" class="form-control" placeholder="Search by name"
					   aria-label="Search" aria-describedby="search-addon" />
				<button class="btn btn-secondary searching" type="submit">
					<i class="bi bi-search"></i>
				</button>
			</form>
		</div>
	</div>
	<table class="table table-striped table-bordered m-0" cellspacing="0" width="100%">
		<thead class="justify-content-md-between justify-content-sm-center align-content-center border-bottom border-2 my-2 bg-dark text-light p-3 rounded-3">
			<tr class="text-center">
				<th>
					<strong>ID</strong>
				</th>
				<th>
					<strong>Book Title</strong>
				</th>
				<th>
					<strong>Description</strong>
				</th>
				<th>
					<strong>Book Detail</strong>
				</th>
				<th>
					<strong>Genre</strong>
				</th>
				<th>
					<strong>Author</strong>
				</th>
				<th>
					<strong>Publisher</strong>
				</th>
				<th>
					<strong>Price</strong>
				</th>
				<th>
					<strong>Original Price</strong>
				</th>
				<th>
					<strong>Sale Percent</strong>
				</th>
				<th>
					<strong>Stock</strong>
				</th>
				<th>
					<strong>Image</strong>
				</th>
				<th>
					<strong>Edit</strong>
				</th>
				<th>
					<strong>Delete</strong>
				</th>
			</tr>
		</thead>
		@foreach (var item in Model)
		{
			<tbody class="justify-content-md-between justify-content-sm-center border-bottom border-2 my-2 bg-light p-2 rounded-3">
				<tr>
					<td class="text-center align-middle">@item.BookId</td>
					<td class="text-center align-middle">@item.BookTitle</td>
					<td class="text-center align-middle">@item.BookDescription</td>
					<td class="text-center align-middle">@item.BookDetail</td>
					<td class="text-center align-middle">@item.Genre.GenreName</td>
					<td class="text-center align-middle">@item.Author.AuthorName</td>
					<td class="text-center align-middle">@item.Publisher.PublisherName</td>
					<td class="text-center align-middle">@item.BookPrice</td>
					<td class="text-center align-middle">@item.BookOriginalPrice</td>
					<td class="text-center align-middle">@item.SalePercent</td>
					<td class="text-center align-middle">@item.BookStock</td>
					<td class="text-center align-middle"><img src="@item.BookImage" height="50%" width="50%"/></td>
					<td class="text-center align-middle">
						<a asp-area="Owners" asp-controller="Book" asp-action="Update" asp-route-id="@item.BookId"><i class="bi bi-pen-fill" style="color: black;"></i></a>
					</td>
					<td class="text-center align-middle">
						<a asp-action="Delete" asp-route-id="@item.BookId" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash-fill" style="color: red;"></i></a>
					</td>
				</tr>
			</tbody>
		}
	</table>
</div>