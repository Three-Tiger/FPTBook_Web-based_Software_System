	<script>
		function formValid() {
			f = document.formSearch
			var validname = /^[A-Za-z]+|(\s)$/
			var format = /[!#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]+/

			if (format.test(f.search.value) || validname.test(f.search.value) == false) {
				alert("Invalid search value. Please enter again")
				f.search.focus()
				return false
			}
			return true
		}
	</script>
