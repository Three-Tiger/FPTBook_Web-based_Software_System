					<form id="formSearch" asp-controller="Home" asp-action="Search" asp-route-pg="1" autocomplete="off" name="formSearch" class="d-flex input-group w-auto" method="GET" onsubmit="return formValid()">
						<input class="form-control" type="search" name="searchValue" placeholder="Search product" aria-label="Search" required>
						<button class="btn btn-outline-info ms-2" type="submit">Search</button>
					</form>
				</div>
				<div class="col-lg-auto col-md-12 col-12 d-flex justify-content-center my-2 my-lg-0">
